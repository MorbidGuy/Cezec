<IfModule mod_headers.c>
    # 1. HSTS (Força HTTPS e previne downgrade attacks)
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # 2. Proteção contra Clickjacking (Impede que o site seja aberto em iframes)
    Header always set X-Frame-Options "SAMEORIGIN"

    # 3. Proteção contra XSS (Cross-Site Scripting)
    Header set X-XSS-Protection "1; mode=block"

    # 4. Previne MIME-sniffing (Impede o navegador de adivinhar tipos de arquivo)
    Header set X-Content-Type-Options "nosniff"

    # 5. Referrer Policy (Protege dados de navegação)
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # 6. Content Security Policy (CSP) - A Muralha de Defesa
    # Permite apenas fontes do Google e scripts/estilos locais. Bloqueia injeções externas.
    Header set Content-Security-Policy "default-src 'self'; img-src 'self' data:; font-src 'self' https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; script-src 'self' 'unsafe-inline'; object-src 'none'; frame-ancestors 'self';"
</IfModule>

# Bloquear acesso a arquivos sensíveis (como .git, .env, etc)
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Desabilitar listagem de diretórios (Evita que vejam seus arquivos se não houver index.html)
Options -Indexes